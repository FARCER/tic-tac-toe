*
  box-sizing border-box
  outline none
 
.game-title
  display block
  margin-bottom 30px  
  font-size 35px
  font-weight bold
  text-align center
  
  
.game
  display flex
  justify-content space-between
  flex-wrap wrap
  width 152px
  margin 0 auto 50px
  border 1px solid #000

.game-item
  position relative
  width 50px
  height 50px
  line-height 48px
  border 1px solid #000
  cursor pointer
  text-align center
  font-size 30px
  font-weight bold
  transition all linear .3s
  
  &:hover
    background-color #ccc
    
  &.o
    background-color #abfdab
    
  &.x
    background-color #ff9999
  
#reset-game
  display block
  margin 0 auto
  border 1px solid #000
  border-radius 20px
  background-color #fff
  padding 10px 20px
  cursor pointer
  transition all linear .3s
  
  &:hover
    background-color #ccc